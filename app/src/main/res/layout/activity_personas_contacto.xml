<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Vistas.PersonasContacto"
    >


    <ImageView
        android:id="@+id/ivLogoContacto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreEmpresa"
        android:textSize="20dp"
        android:textColor="@color/turquesa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/ivLogoContacto"
        app:layout_constraintStart_toStartOf="@+id/ivLogoContacto"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoContacto" />

    <TextView
        android:id="@+id/idSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Seleccione un contacto"
        app:layout_constraintStart_toStartOf="@+id/ivLogoContacto"
        app:layout_constraintTop_toBottomOf="@+id/nombreEmpresa" />

    <Spinner
        android:id="@+id/spContatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/idSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idSpinner"
        app:layout_constraintTop_toTopOf="@+id/idSpinner" />

    <TextView
        android:id="@+id/idNombreContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Nombre: "
        app:layout_constraintStart_toStartOf="@+id/idSpinner"
        app:layout_constraintTop_toBottomOf="@+id/spContatos" />

    <TextView
        android:id="@+id/nombreContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/idNombreContacto"
        app:layout_constraintStart_toEndOf="@+id/idNombreContacto"
        app:layout_constraintTop_toTopOf="@+id/idNombreContacto" />

    <TextView
        android:id="@+id/idCargoContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cargo: "
        app:layout_constraintEnd_toEndOf="@+id/idNombreContacto"
        app:layout_constraintTop_toBottomOf="@+id/idNombreContacto" />

    <TextView
        android:id="@+id/cargoContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/idCargoContacto"
        app:layout_constraintStart_toEndOf="@+id/idCargoContacto"
        app:layout_constraintTop_toTopOf="@+id/idCargoContacto" />

    <TextView
        android:id="@+id/idTelefonoContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Telefono: "
        app:layout_constraintEnd_toEndOf="@+id/idNombreContacto"
        app:layout_constraintTop_toBottomOf="@+id/idCargoContacto" />

    <TextView
        android:id="@+id/telefonoContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/idTelefonoContacto"
        app:layout_constraintStart_toEndOf="@+id/idTelefonoContacto"
        app:layout_constraintTop_toTopOf="@+id/idTelefonoContacto" />

    <TextView
        android:id="@+id/idMailContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email: "
        app:layout_constraintEnd_toEndOf="@+id/idCargoContacto"
        app:layout_constraintTop_toBottomOf="@+id/idTelefonoContacto" />

    <TextView
        android:id="@+id/mailContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/idMailContacto"
        app:layout_constraintStart_toEndOf="@+id/idMailContacto"
        app:layout_constraintTop_toTopOf="@+id/idMailContacto" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>